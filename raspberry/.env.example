# ==============================================
# AI Art Gallery - 라즈베리파이 설정
# ==============================================
# 이 파일을 .env로 복사하고 값을 수정하세요:
# cp .env.example .env

# ==============================================
# 서버 연결 설정 (이미지 업로드용)
# ==============================================
# EC2 서버 주소 (IP 또는 도메인)
SERVER_HOST=http://your-ec2-ip-or-domain

# 서버 포트 (Docker로 배포 시 80)
SERVER_PORT=80

# 업로드 엔드포인트
SERVER_UPLOAD_ENDPOINT=/upload

# ==============================================
# 카메라 설정
# ==============================================
# 카메라 해상도
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720

# 카메라 포맷 (RGB888 권장)
CAMERA_FORMAT=RGB888

# 촬영 간격 (초)
CAMERA_CAPTURE_INTERVAL=2.0

# ==============================================
# 사람 감지 설정
# ==============================================
# 감지 기능 활성화 (true/false)
# false로 설정하면 모든 프레임을 업로드
DETECTION_ENABLED=true

# 최소 감지 신뢰도 (0.0 ~ 1.0)
DETECTION_MIN_CONFIDENCE=0.5

# 연속 촬영 방지 쿨다운 (초)
DETECTION_COOLDOWN_SECONDS=5.0

# 전체 프레임 사용 (true = 전체, false = 감지 영역만 크롭)
USE_FULL_FRAME=true

# 감지 영역 최소 비율 (프레임 대비)
MIN_BBOX_AREA_RATIO=0.15

# 바운딩 박스 확대 비율
BBOX_SCALE_UP=1.3

# ==============================================
# 카운트다운 설정
# ==============================================
# 촬영 전 카운트다운 시간 (초, 0이면 즉시 촬영)
COUNTDOWN_SECONDS=3

# ==============================================
# LED 설정
# ==============================================
# LED 사용 여부
LED_ENABLED=true

# LED GPIO 핀 번호
LED_PIN=18

# 카운트다운 중 LED 깜빡임
LED_BLINK_ON_COUNTDOWN=true

# ==============================================
# 스트림 설정
# ==============================================
# 스트림 활성화
STREAM_ENABLED=true

# 로컬 MJPEG 서버 (같은 네트워크에서만 접근 가능)
STREAM_HOST=0.0.0.0
STREAM_PORT=8080

# 스트림 품질
STREAM_FPS=15
STREAM_QUALITY=80

# ==============================================
# EC2 스트림 푸시 설정 (외부 네트워크 접근용)
# ==============================================
# EC2로 스트림 푸시 활성화 (true면 로컬 서버 대신 EC2로 전송)
STREAM_PUSH_ENABLED=true

# EC2 WebSocket URL (ws:// 또는 wss://)
STREAM_PUSH_URL=ws://your-ec2-ip-or-domain/stream/push

# 스트림 인증 키 (EC2의 STREAM_SECRET과 동일해야 함)
STREAM_PUSH_SECRET=raspberry-pi-secret
