# ==============================================
# AI Art Gallery - 라즈베리파이 설정
# ==============================================
# 이 파일을 .env로 복사하고 값을 수정하세요:
# cp .env.example .env

# ==============================================
# 서버 연결 설정
# ==============================================
# 서버 호스트 (IP 주소 또는 도메인)
SERVER_HOST=http://192.168.1.100

# 서버 포트
SERVER_PORT=8000

# 업로드 엔드포인트
SERVER_UPLOAD_ENDPOINT=/upload

# ==============================================
# 카메라 설정
# ==============================================
# 카메라 해상도 (너비)
CAMERA_WIDTH=1280

# 카메라 해상도 (높이)
CAMERA_HEIGHT=720

# 카메라 포맷 (RGB888 권장)
CAMERA_FORMAT=RGB888

# 촬영 간격 (초)
CAMERA_CAPTURE_INTERVAL=2.0

# ==============================================
# 사람 감지 설정
# ==============================================
# 감지 기능 활성화 (true/false)
# false로 설정하면 모든 프레임을 업로드
DETECTION_ENABLED=true

# 최소 감지 신뢰도 (0.0 ~ 1.0)
# 낮을수록 더 많이 감지, 높을수록 정확한 감지만
DETECTION_MIN_CONFIDENCE=0.5

# 연속 촬영 방지 쿨다운 (초)
# 한 번 촬영 후 다음 촬영까지 대기 시간
DETECTION_COOLDOWN_SECONDS=5.0

# ==============================================
# 카운트다운 설정
# ==============================================
# 촬영 전 카운트다운 시간 (초)
# 0으로 설정하면 카운트다운 없이 즉시 촬영
COUNTDOWN_SECONDS=3

# ==============================================
# LED 설정
# ==============================================
# LED 사용 여부 (true/false)
LED_ENABLED=true

# LED GPIO 핀 번호 (기본값: 18)
LED_PIN=18

# 카운트다운 중 LED 깜빡임 (true/false)
LED_BLINK_ON_COUNTDOWN=true

# ==============================================
# Stream Settings
# ==============================================
# Enable/disable MJPEG stream
STREAM_ENABLED=true

# Stream server host
STREAM_HOST=0.0.0.0

# Stream server port
STREAM_PORT=8080

# Stream FPS (frames per second)
STREAM_FPS=15

# JPEG quality (1-100)
STREAM_QUALITY=80
